{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "msvc-x64",
      "displayName": "MSVC x64 (Ninja Multi-Config)",
      "description": "Preset for Visual Studio Open Folder and command-line builds.",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/msvc-x64",
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-x64-debug",
      "displayName": "Build Debug (MSVC x64)",
      "configurePreset": "msvc-x64",
      "configuration": "Debug"
    },
    {
      "name": "msvc-x64-release",
      "displayName": "Build Release (MSVC x64)",
      "configurePreset": "msvc-x64",
      "configuration": "Release"
    }
  ]
}
